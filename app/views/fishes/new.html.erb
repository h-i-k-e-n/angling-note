        <% @fishes.each do |fish| %>
         <li class='list'>

          
          
 
    <div class='item-img-content'>
     <%= link_to fish_path(fish.id) do %>
     
      <%= image_tag fish.image, class: "item-img" %>
    </div>
   
     <div class='item-info'>
    <div class='item-price'>
        <span><%= fish.item_a%></span>
      </div>
   

      <h3 class='item-name'>

        <%= fish.name %>
      </h3>
      
     <%end %>
      <% end %>
      <% end %>
    </div>
</div>

</li>
       
</ul>
</div>
